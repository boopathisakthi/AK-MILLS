<div class="row">
    <div class="col-lg-3">
        <div class="kt-portlet">
            <div class="kt-portlet__head">
                <div class="kt-portlet__head-label">
                    <h3 class="kt-portlet__head-title">
                        Department Entry
                    </h3>
                </div>

            </div>
            <!-- <form class="kt-form kt-form--label-right"> -->
            <div class="kt-portlet__body">
                <form class="kt-form kt-form--label-right" id="kt_form_3">
                    <div class="form-group">
                        <label for="txtdepartmentname" class="form-control-label">Department:</label>
                        <input type="text" class="form-control form-control-sm" placeholder="Enter Departmentname" name="departmentname" id="txtdepartmentname">
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="form-control-label">Description:</label>
                        <textarea class="form-control" id="txtdescription" placeholder="Enter Description" id="message-text"></textarea>
                    </div>
                    <div class="kt-portlet__foot">
                        <div class="kt-form__actions">
                            <div class="text-center">
                                <div class="col-lg-12">
                                    <input type="hidden" id="hf_id">
                                    <button type="submit" id="btnsave" class="btn btn-brand btn-sm">Save</button>
                                    <button type="reset" onclick="cleardata()" class="btn btn-secondary btn-sm">Clear</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>


        </div>
    </div>
    <div class="col-lg-9">
        <div class="kt-portlet">
            <div class="kt-portlet__head">
                <div class="kt-portlet__head-label">
                    <h3 class="kt-portlet__head-title">
                        Department List
                    </h3>
                </div>

            </div>
            <!-- <form class="kt-form kt-form--label-right"> -->
            <div class="kt-portlet__body">
                <table class="table text-center table-sm table-striped- table-bordered table-hover table-checkable" id="gvlist">
                    <thead>
                        <tr>

                            <th>sno</th>
                            <th>Department</th>
                            <th>Description</th>
                            <th>Action</th>

                        </tr>
                    </thead>
                </table>
            </div>

        </div>
    </div>

</div>